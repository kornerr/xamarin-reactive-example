<?xml version="1.0" encoding="UTF-8"?>
<reactive:ReactiveContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:local="clr-namespace:MC"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MC.LoginView"
    x:TypeArguments="local:LoginViewVM"
    xmlns:reactive="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms" >
    <reactive:ReactiveContentView.Content>
        <StackLayout
            Spacing="20"
            Padding="20"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            BackgroundColor="#f15252">
            <Entry
                x:Name="Username"
                Placeholder="Username" />
            <Entry
                x:Name="Password"
                Placeholder="Password"
                IsPassword="true" />
            <Button
                x:Name="Login"
                Text="Login"
                TextColor="White"
                BackgroundColor="#3060DD" />
        </StackLayout>
    </reactive:ReactiveContentView.Content>
</reactive:ReactiveContentView>
